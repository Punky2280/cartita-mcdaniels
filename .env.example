# =============================================================================
# Cartrita AI Agents - Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit your .env file to version control!

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://robbie:robbie123@localhost:5432/cartrita_db
POSTGRES_USER=robbie
POSTGRES_PASSWORD=robbie123
POSTGRES_DB=cartrita_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# SQLite (for local development/testing)
SQLITE_DB_PATH=./data/local.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI/ML Service API Keys
# =============================================================================

# OpenAI API
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id-here

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# HuggingFace
HUGGINGFACE_TOKEN=hf_your-huggingface-token-here

# Deepgram (Speech-to-Text/Text-to-Speech)
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# EverArt (Image Generation)
EVERART_API_KEY=your-everart-api-key-here

# =============================================================================
# Search & Web APIs
# =============================================================================

# Tavily Search API
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# SerpAPI (Google Search)
SERPAPI_API_KEY=your-serpapi-api-key-here

# Brave Search API
BRAVE_API_KEY=your-brave-search-api-key-here

# =============================================================================
# Version Control & Development Tools
# =============================================================================

# GitHub API
GITHUB_TOKEN=ghp_your-github-personal-access-token-here
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your-github-personal-access-token-here

# GitLab API
GITLAB_TOKEN=glpat-your-gitlab-personal-access-token-here
GITLAB_API_URL=https://gitlab.com/api/v4

# =============================================================================
# Cloud & Infrastructure
# =============================================================================

# Docker
DOCKER_HOST=unix:///var/run/docker.sock

# Kubernetes
KUBECONFIG=~/.kube/config

# Google Drive API
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id-here
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret-here
GOOGLE_DRIVE_REFRESH_TOKEN=your-google-drive-refresh-token-here

# =============================================================================
# Communication & Productivity Tools
# =============================================================================

# Slack API
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_USER_TOKEN=xoxp-your-slack-user-token-here

# Notion API
NOTION_API_KEY=secret_your-notion-integration-key-here
NOTION_DATABASE_ID=your-notion-database-id-here

# Todoist API
TODOIST_API_TOKEN=your-todoist-api-token-here

# =============================================================================
# Application Configuration
# =============================================================================

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Server Configuration
PORT=3000
HOST=localhost

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# JWT Configuration (for authentication)
JWT_SECRET=your-super-secret-jwt-signing-key-here
JWT_EXPIRES_IN=7d

# =============================================================================
# Third-Party Integrations
# =============================================================================

# Everything Search (Windows file search)
EVERYTHING_API_URL=http://localhost:8080

# User Agent for HTTP requests
USER_AGENT=Cartrita AI Agent/1.0

# =============================================================================
# Development & Testing
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://robbie:robbie123@localhost:5432/cartrita_test_db

# Mock APIs (for testing)
MOCK_APIS=false

# Debug Mode
DEBUG=cartrita:*

# =============================================================================
# Security & Monitoring
# =============================================================================

# Encryption keys
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Monitoring
SENTRY_DSN=https://your-sentry-dsn-here
HEALTH_CHECK_TOKEN=your-health-check-token-here
