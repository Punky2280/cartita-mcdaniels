# Cartrita McDaniels Suarez - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to git!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3002
HOST=0.0.0.0
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Connection
DATABASE_URL=postgresql://username:password@localhost:5432/cartrita_db

# Database Connection Pool Settings
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30
DB_CONNECT_TIMEOUT=10
DB_MAX_LIFETIME=3600

# Database Debugging (development only)
DB_DEBUG=false
DB_LOG=false

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_EMBEDDINGS_API_KEY=sk-proj-your-openai-embeddings-key-here
EMBEDDING_API_KEY=sk-proj-your-embedding-api-key-here

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# Computer Use Settings (Anthropic)
COMPUTER_USE_ENABLED=true
COMPUTER_USE_SAFETY_MODE=strict

# HuggingFace Configuration
HUGGINGFACE_TOKEN=hf_your-huggingface-token-here
HUGGING_FACE_HUB_TOKEN=hf_your-huggingface-hub-token-here

# =============================================================================
# EXTERNAL SERVICES & APIS
# =============================================================================
# GitHub
GITHUB_TOKEN=github_pat_your-github-personal-access-token-here

# Deepgram (Speech Services)
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# Search & Knowledge APIs
TAVILY_API_KEY=tvly-dev-your-tavily-api-key-here
SERPAPI_API_KEY=your-serpapi-key-here
BRAVE_API_KEY=your-brave-search-api-key-here

# Codacy Configuration
CODACY_API_TOKEN=your-codacy-api-token-here

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
MCP_CONFIG_PATH="/path/to/your/mcp_config.json"
MCP_SEQUENTIAL_THINKING_PATH="/path/to/your/mcp-servers/sequential-thinking"
MCP_LOG_LEVEL=info

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Context7 MCP (for up-to-date documentation)
CONTEXT7_API_KEY=your-context7-api-key-here

# Figma (if using Figma integrations)
FIGMA_ACCESS_TOKEN=figd_your-figma-token-here

# EverArt (if using EverArt)
EVERART_API_KEY=your-everart-api-key-here

# GitLab (if using GitLab integration)
GITLAB_TOKEN=your-gitlab-token-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret for authentication (use a strong random string in production)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# API Rate Limiting
API_RATE_LIMIT=100

# CORS Configuration (set to frontend URL for production)
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# DEVELOPMENT / TESTING
# =============================================================================
# API Base URL for documentation
API_BASE_URL=http://localhost:3002

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# For production deployment:
# 1. Set NODE_ENV=production
# 2. Use strong, unique secrets for JWT_SECRET
# 3. Configure proper CORS_ORIGIN (not *)
# 4. Set up SSL/TLS certificates
# 5. Use environment-specific database URLs
# 6. Consider using a secret management service
