{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "config": {
        "priority": 1,
        "timeout": 30000,
        "retryAttempts": 3,
        "retryDelay": 1000,
        "healthCheckInterval": 60000,
        "circuitBreaker": {
          "failureThreshold": 5,
          "resetTimeout": 30000
        },
        "rateLimit": {
          "requests": 5000,
          "window": 3600000
        },
        "category": "version-control",
        "critical": true
      }
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      },
      "config": {
        "priority": 1,
        "timeout": 15000,
        "retryAttempts": 3,
        "retryDelay": 500,
        "healthCheckInterval": 30000,
        "circuitBreaker": {
          "failureThreshold": 3,
          "resetTimeout": 15000
        },
        "rateLimit": {
          "requests": 1000,
          "window": 60000
        },
        "category": "storage",
        "critical": true
      }
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "config": {
        "priority": 2,
        "timeout": 10000,
        "retryAttempts": 2,
        "retryDelay": 2000,
        "healthCheckInterval": 120000,
        "circuitBreaker": {
          "failureThreshold": 3,
          "resetTimeout": 60000
        },
        "rateLimit": {
          "requests": 100,
          "window": 60000
        },
        "category": "search",
        "critical": false
      }
    },
    "everart": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-everart"
      ],
      "env": {
        "EVERART_API_KEY": "${EVERART_API_KEY:-}"
      },
      "config": {
        "priority": 3,
        "timeout": 20000,
        "retryAttempts": 2,
        "retryDelay": 3000,
        "healthCheckInterval": 300000,
        "circuitBreaker": {
          "failureThreshold": 2,
          "resetTimeout": 120000
        },
        "rateLimit": {
          "requests": 50,
          "window": 300000
        },
        "category": "image-generation",
        "critical": false
      }
    },
    "gitlab": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-gitlab"
      ],
      "env": {
        "GITLAB_PERSONAL_ACCESS_TOKEN": "${GITLAB_TOKEN:-}",
        "GITLAB_API_URL": "${GITLAB_API_URL:-https://gitlab.com/api/v4}"
      },
      "config": {
        "priority": 2,
        "timeout": 15000,
        "retryAttempts": 3,
        "retryDelay": 1500,
        "healthCheckInterval": 120000,
        "circuitBreaker": {
          "failureThreshold": 4,
          "resetTimeout": 45000
        },
        "rateLimit": {
          "requests": 2000,
          "window": 3600000
        },
        "category": "version-control",
        "critical": false
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/robbie/cartrita-mcdaniels-suarez/src",
        "/home/robbie/cartrita-mcdaniels-suarez/scripts",
        "/home/robbie/cartrita-mcdaniels-suarez/docs",
        "/home/robbie/cartrita-mcdaniels-suarez/tests",
        "/tmp"
      ],
      "env": {},
      "config": {
        "priority": 1,
        "timeout": 5000,
        "retryAttempts": 2,
        "retryDelay": 200,
        "healthCheckInterval": 60000,
        "circuitBreaker": {
          "failureThreshold": 3,
          "resetTimeout": 10000
        },
        "rateLimit": {
          "requests": 1000,
          "window": 60000
        },
        "category": "filesystem",
        "critical": true
      }
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "${CONTEXT7_API_KEY:-demo}"
      ],
      "env": {},
      "config": {
        "priority": 1,
        "timeout": 20000,
        "retryAttempts": 3,
        "retryDelay": 2000,
        "healthCheckInterval": 60000,
        "circuitBreaker": {
          "failureThreshold": 3,
          "resetTimeout": 30000
        },
        "rateLimit": {
          "requests": 200,
          "window": 300000
        },
        "category": "documentation",
        "critical": false
      }
    }
  },
  "connectionPool": {
    "maxConnections": 20,
    "minConnections": 5,
    "connectionTimeout": 30000,
    "idleTimeout": 300000,
    "maxRetries": 3,
    "retryDelay": 1000,
    "healthCheckInterval": 60000
  },
  "monitoring": {
    "enabled": true,
    "metricsInterval": 30000,
    "alertThresholds": {
      "responseTime": 5000,
      "errorRate": 0.05,
      "availabilityRate": 0.95
    }
  },
  "security": {
    "enableTLS": true,
    "certificateValidation": true,
    "maxRequestSize": "10mb",
    "rateLimitGlobal": {
      "requests": 10000,
      "window": 3600000
    }
  }
}
