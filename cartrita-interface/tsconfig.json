{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", 
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["shared/*"],
      "@frontend/*": ["frontend/src/*"],
      "@backend/*": ["backend/src/*"]
    }
  },
  "include": [
    "frontend/src/**/*",
    "backend/src/**/*", 
    "shared/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
